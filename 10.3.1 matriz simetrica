matriz=[
    [1,2,3,4],
    [2,3,2,1],
    [3,2,7,8],
    [4,1,6,5]
]
fila=[]
col=[]
columnas=[]
for i in matriz:
    fila.append(i)
print(fila)

columnas = []
for j in range(len(matriz[0])):
    col = []
    for i in matriz:
        col.append(i[j])
    columnas.append(col)
print(columnas)


if fila == columnas:
    print('La matriz es simetrica')
else:
    print('La matriz no es simetrica')

    

matriz = [
    [1, 2, 3],
    [2, 5, 0],
    [3, 0, 5]
]
fila=[]
col=[]
columnas=[]
for i in matriz:
    fila.append(i)
print(fila)

columnas = []
for j in range(len(matriz[0])):
    col = []
    for i in matriz:
        col.append(i[j])
    columnas.append(col)
print(columnas)


if fila == columnas:
    print('La matriz es simetrica')
else:
    print('La matriz no es simetrica')


    